        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>forgotServlet</servlet-name>
        <servlet-class>controllers.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>forgotServlet</servlet-name>
        <url-pattern>/forgotServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>resetServlet</servlet-name>
